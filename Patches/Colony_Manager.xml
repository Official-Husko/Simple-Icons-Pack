<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Colony Manager</li>
		</mods>
		<match Class="PatchOperationConditional">
			<success>Always</success>
			<xpath>/Defs/MainButtonDef[defName="Fluffy_Manager"]/iconPath</xpath>
			<nomatch Class="PatchOperationAdd">
				<xpath>/Defs/MainButtonDef[defName="Fluffy_Manager"]</xpath>
				<value>
					<iconPath>UI/Buttons/MainButtons/ColonyManager</iconPath>
				</value>
			</nomatch>
			<match Class="PatchOperationReplace">
				<xpath>/Defs/MainButtonDef[defName="Fluffy_Manager"]/iconPath</xpath>
				<value>
					<iconPath>UI/Buttons/MainButtons/ColonyManager</iconPath>
				</value>
			</match>
		</match>
	</Operation>

</Patch>