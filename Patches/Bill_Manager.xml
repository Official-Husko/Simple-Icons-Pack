<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Bill Manager</li>
    </mods>
    <match Class="PatchOperationConditional">
      <success>Always</success>
	  <xpath>Defs/MainButtonDef[defName="n1_ui_exp"]/iconPath</xpath>
	  <nomatch Class="PatchOperationAdd">
		  <xpath>Defs/MainButtonDef[defName="n1_ui_exp"]</xpath>
		  <value>
			  <iconPath>UI/Buttons/MainButtons/BillManager</iconPath>
		  </value>
	  </nomatch>
	  <match Class="PatchOperationReplace">
		  <xpath>Defs/MainButtonDef[defName="n1_ui_exp"]/iconPath</xpath>
		  <value>
			  <iconPath>UI/Buttons/MainButtons/BillManager</iconPath>
		  </value>
	  </match>
    </match>
  </Operation>

</Patch>